{
  "name": "@chartts/svelte",
  "version": "0.1.6",
  "description": "Chartts for Svelte. 40+ chart types, beautiful defaults, Tailwind ready.",
  "type": "module",
  "svelte": "./src/index.ts",
  "types": "./dist/exports.d.ts",
  "main": "./dist/exports.cjs",
  "module": "./dist/exports.js",
  "exports": {
    ".": {
      "svelte": "./src/index.ts",
      "types": "./dist/exports.d.ts",
      "import": "./dist/exports.js",
      "require": "./dist/exports.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "svelte": ">=4.0.0",
    "@chartts/core": "workspace:*"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartts/chartts"
  },
  "homepage": "https://chartts.com"
}
